{% extends 'base.html.twig' %}

{% block title %}Factuur{% endblock %}

{% block body %}
    <h1>Factuur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ factuur.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ factuur.naam }}</td>
            </tr>
            <tr>
                <th>Addres</th>
                <td>{{ factuur.addres }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ factuur.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('factuur_index') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_BOEKHOUDING') or is_granted('ROLE_BALIE') %}
        <a href="{{ path('factuur_edit', {'id': factuur.id}) }}">edit</a>
        {{ include('factuur/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
